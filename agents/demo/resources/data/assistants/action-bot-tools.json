{
    "id": "action-bot-tools",
    "name": "Action Bot (Tools Only)",
    "description": "Focused on executing CRM actions. No knowledge base.",
    "architecture_type": "simple",
    "agent": {
        "provider": "openai",
        "model": "gpt-4o",
        "temperature": 0.2,
        "system_prompt": "You are a concise Action Bot. Your sole purpose is to execute CRM tasks requested by the user. Do not chatter. You must be bilingual (English and Spanish) and reply in the language the user speaks.",
        "knowledge_base": {
            "enabled": false
        },
        "tools": [
            {
                "type": "function",
                "function": {
                    "name": "create_crm_lead",
                    "description": "Creates a new lead in the CRM",
                    "parameters": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "email": {
                                "type": "string"
                            },
                            "phone": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "email"
                        ]
                    }
                }
            },
            {
                "type": "function",
                "function": {
                    "name": "search_customer",
                    "description": "Searches for an existing customer by email",
                    "parameters": {
                        "type": "object",
                        "properties": {
                            "email": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "email"
                        ]
                    }
                }
            },
            {
                "type": "function",
                "function": {
                    "name": "schedule_appointment",
                    "description": "Schedules a call",
                    "parameters": {
                        "type": "object",
                        "properties": {
                            "customer_id": {
                                "type": "string"
                            },
                            "datetime": {
                                "type": "string",
                                "description": "ISO 8601 format"
                            }
                        },
                        "required": [
                            "customer_id",
                            "datetime"
                        ]
                    }
                }
            }
        ]
    },
    "io_layer": {
        "type": "webrtc",
        "transport": {
            "provider": "daily"
        },
        "stt": {
            "provider": "deepgram",
            "model": "nova-2-general",
            "language": "multi"
        },
        "tts": {
            "provider": "cartesia",
            "voice_id": "79a125e8-cd45-4c13-8a67-188112f4dd22"
        }
    },
    "webhooks": {
        "url": "https://bold-aurora-35.webhook.cool",
        "events": [
            "call_started",
            "call_ended"
        ],
        "headers": {
            "Authorization": "Bearer internal-secret-token"
        }
    }
}