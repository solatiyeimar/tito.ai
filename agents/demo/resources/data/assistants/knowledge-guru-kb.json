{
    "id": "knowledge-guru-kb",
    "name": "Knowledge Guru (KB Only)",
    "description": "Expert in documentation. No external tools.",
    "type": "webrtc",
    "agent": {
        "provider": "google",
        "model": "gemini-1.5-pro",
        "temperature": 0.4,
        "system_prompt": "You are a Knowledge Expert. Answer questions solely based on the retrieved context from the Knowledge Base. If the answer is not in the context, say so. You must be bilingual (English and Spanish) and reply in the language the user speaks.",
        "knowledge_base": {
            "enabled": true,
            "provider": "pinecone",
            "index_name": "support-docs",
            "retrieval_settings": {
                "top_k": 5,
                "threshold": 0.8
            }
        },
        "tools": []
    },
    "io_layer": {
        "transport": {
            "provider": "daily"
        },
        "stt": {
            "provider": "deepgram",
            "language": "multi"
        },
        "tts": {
            "provider": "openai",
            "voice_id": "alloy"
        }
    },
    "webhooks": {
        "url": "https://bold-aurora-35.webhook.cool",
        "events": [
            "transcription",
            "call_ended"
        ]
    }
}