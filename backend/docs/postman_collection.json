  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Basic test for all requests",
          "pm.test(\"Status code is successful\", function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 101]);",
          "});",
          "",
          "// Auto-capture IDs",
          "if (pm.response.code === 201 || pm.response.code === 200) {",
          "    try {",
          "        var jsonData = pm.response.json();",
          "        if (jsonData.id) {",
          "            if (pm.request.url.path.includes('assistants') && pm.request.method === 'POST') {",
          "                pm.collectionVariables.set('assistant_id', jsonData.id);",
          "                console.log('Captured assistant_id:', jsonData.id);",
          "            }",
          "            if (pm.request.url.path.includes('campaigns') && pm.request.method === 'POST') {",
          "                pm.collectionVariables.set('campaign_id', jsonData.id);",
          "                console.log('Captured campaign_id:', jsonData.id);",
          "            }",
          "            if (pm.request.url.path.includes('calls') && pm.request.method === 'POST') {",
          "                 pm.collectionVariables.set('bot_pid', jsonData.id);",
          "                 console.log('Captured bot_pid:', jsonData.id);",
          "            }",
          "        }",
          "        if (jsonData.bot_pid) {",
          "             pm.collectionVariables.set('bot_pid', jsonData.bot_pid);",
          "        }",
          "    } catch(e) {}",
          "}"
        ]
      }
    }
  ]
}